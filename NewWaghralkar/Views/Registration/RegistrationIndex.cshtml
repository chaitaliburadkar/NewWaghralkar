
@{
    ViewBag.Title = "RegistrationIndex";
}

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script src="~/Content/Registration.js"></script>


<style>
    h1 {
        font-family: "Time new roman";
        letter-spacing: normal;
    }

    h3 {
        font-family: "Time new roman";
        letter-spacing: normal;
    }
</style>
<center>
    <div class="col-sm-6">
        <div class="card shadow-lg bg-body-tertiary pt-2 table table-striped" style="background-color:lavenderblush;">
            <div class="card-body row">
                <div class="col-sm-12">
                    <h1>Registration Form</h1><br />
                    <form id="form_id">

                        <input type="hidden" id="hdnid" />

                        <h3>Cust_Name</h3>
                        <input type="text" id="txtname" placeholder="Enter Name" class="form-control" style="width:300px" /><br />
                        <h3>Contact_No</h3>
                        <input type="number" id="txtno" placeholder="Enter Number" class="form-control" style="width:300px" /><br />
                        <h3>Email</h3>
                        <input type="text" id="txtemail" placeholder="Enter Email" class="form-control" style="width:300px" /><br />
                        <h3>Password</h3>
                        <input type="text" id="txtpass" placeholder="Enter Password" class="form-control" style="width:300px" /><br />
                        <h3>Status</h3>
                        <input type="number" id="txtstatus" placeholder="Enter Status" class="form-control" style="width:300px" /><br /><br />
                        <input type="button" value="submit" Onclick="SaveForm()" class="btn btn-success" style="width:200px" />&nbsp;

                        <input type="button" value="Reset" Onclick="newFunction()" class="btn btn-danger" style="width:200px" /><br />

                    </form>
                    <script>
                        function newFunction() {
                            var element = document.getElementById("form_id");
                            element.reset()
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>


</center>